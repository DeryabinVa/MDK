<Window x:Class="knv1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:knv1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Background="Bisque" Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Логин" HorizontalAlignment="Center" Margin= "1" />
            <TextBox x:Name="txtBox" Background="Pink"  HorizontalAlignment="Center" Width="150" Height="32"/>
            <Label Content="Пароль" HorizontalAlignment="Center"  Margin="370,1"/>
            <PasswordBox x:Name="pswBox" Background="Pink"  HorizontalAlignment="Center" Width="150" Height="32"/>
            <Button x:Name="enterBtn" Content="Вход" HorizontalAlignment="Center" Click="enterBtn_Click" Width="100" Height="25"/>
            <Button x:Name="exitBtn" Content="выход" Click="exitBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
