<Window x:Class="DVA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVA"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Введите пароль" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
            <PasswordBox x:Name="parol" Height="20" Width="100" ></PasswordBox>
            <Button x:Name="enter" Content="Вход" Width="50" Height="20" Click="enter_Click"></Button>
            <Button x:Name="exit" Content="Выход" Background="red" Width="50" Height="20" Click="exit_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
